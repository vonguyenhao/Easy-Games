@model List<EasyGames.Web.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
    decimal total = ViewBag.Total is decimal d ? d : 0m;
}

<h1>Your Cart</h1>

@if (TempData["CartError"] is string err && !string.IsNullOrEmpty(err))
{
    <div class="alert alert-danger">@err</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th class="text-end">Price</th>
                <th class="text-end">Qty</th>
                <th class="text-end">Line</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td class="text-end">@i.UnitPrice.ToString("C")</td>
                    <td class="text-end">
                        <form asp-action="UpdateQty" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@i.ProductId" />
                            <input type="number" name="qty" value="@i.Qty" min="0" class="form-control d-inline-block" style="width:90px" />
                            <button class="btn btn-sm btn-outline-secondary" type="submit">Update</button>
                        </form>
                    </td>
                    <td class="text-end">@((i.UnitPrice * i.Qty).ToString("C"))</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@i.ProductId" />
                            <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total</th>
                <th class="text-end">@total.ToString("C")</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-controller="Catalog" asp-action="Index">Continue Shopping</a>
        <a class="btn btn-primary" asp-action="Checkout">Checkout</a>
    </div>
}
