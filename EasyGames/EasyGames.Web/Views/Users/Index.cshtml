@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@if (TempData["Err"] is string err)
{
    <div class="alert alert-warning">@err</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create User</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th class="text-muted">Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.UserName</td>
                <td class="text-muted">@u.Id</td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this user?');" class="d-inline">
                        <input type="hidden" name="id" value="@u.Id" />
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
