@model EasyGames.Web.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Category)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StockQty)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.StockQty)</dd>

        <dt class="col-sm-2">Created</dt> <!-- read-only, server-managed -->
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
